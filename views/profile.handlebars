<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Book a New Appointment:</h3>
    <p>Please Select The Following Available Barbers To book your next haircut Appointment</p>
  <ol>
  <li>Eugene</li>
  <li>Alex</li>
  <li>Skyler</li>
  <li>Valeryo</li>
</ol>  
    <form class="form new-barber-form">
      <div class="form-group">
        <label for="barber-name">Barber's name:</label>
        <input class="form-input" type="text" id="barber-name" name="barber-name" />
      </div>
      <div class="form-group">
        <label for="haircut-price">Hair Cut price ($):</label>
        <input class="form-input" type="number" id="haircut-price" name="haircut-price" />
      </div>
      <div class="form-group">
        <label for="haircut-type">Type of a haircut you want:</label>
        <textarea class="form-input" id="haircut-type" name="haircut-type"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">book</button>
      </div>
    </form>
  </div>

  {{#if barbers.length}}
  <div class="col-md-6 barber-list">
    <h3>Scheduled Appointments:</h3>

    {{#each barber as |barbers|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/barber/{{barber.id}}">{{barber.barber_name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{barber.id}}">DELETE APPOINTMENT</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>